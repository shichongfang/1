<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/title_common" />

    <Spinner
        android:id="@+id/spin_consumemanager_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_consumemanager_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter query condition value" />

    <Button
        android:id="@+id/btn_consumemanager_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Query"
        android:textSize="@dimen/textsize_middle" />

    <ListView
        android:id="@+id/lv_consumemanager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>