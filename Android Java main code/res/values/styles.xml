<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light" />

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CustomLoadingDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Line_thin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/bgcolor_line_thin</item>
    </style>

    <style name="Line_vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/bgcolor_line_thin</item>
    </style>

    <style name="prompt_common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/prompt_common_height</item>
        <item name="android:background">@color/prompt_commom_bg</item>
        <item name="android:drawableLeft">@drawable/ic_prompt_common</item>
        <item name="android:drawableStart">@drawable/ic_prompt_common</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/prompt_commom_text</item>
        <item name="android:textSize">@dimen/prompt_common_textsize</item>
    </style>

</resources>